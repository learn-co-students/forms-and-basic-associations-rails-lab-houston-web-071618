<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <%= f.label :genre_id %>

  <%= f.collection_select :genre_id, @genres, :id, :name %><br>

  <%= f.label :notes %>
  <input type="text" name="song[note_contents][]" id="song_notes_1" value="">
  <input type="text" id="song_notes_2" name="song[note_contents][]" value="">

  <%= f.submit %>


<% end %>
